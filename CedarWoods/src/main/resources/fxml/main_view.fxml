<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.uwe.cedarwoods.MenuController">

    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <Label text="CedarWoods Accommodation System">
                <font>
                    <Font size="24" />
                </font>
            </Label>

            <Button fx:id="viewAccommodationButton" onAction="#openViewAccommodation" prefWidth="250" text="Accommodation Management" />

            <Button onAction="#handleExit" prefWidth="250" text="Exit" />
        </VBox>
    </children>
</AnchorPane>
